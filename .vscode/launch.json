{
    "configurations": [
        {
            "name": "Attach to Node",
            "type": "node",
            "request": "attach",
            "smartStep": true,
            "port": 9229,
            "address": "127.0.0.1",
            "localRoot": "${workspaceFolder}/components",
            "remoteRoot": "/app/node_modules/@gitpod",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Attach to Delve",
            "type": "go",
            "request": "attach",
            "port": 32991,
            "mode": "remote"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "gitpod-db-tests",
            "cwd": "${workspaceFolder}/components/gitpod-db",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "db-test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}
